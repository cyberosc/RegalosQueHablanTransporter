<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_route"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/txt_tag_routes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="RUTA B" />

            <TextView
                android:id="@+id/txt_qty_order_routes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_below="@+id/txt_tag_routes"
                android:layout_marginBottom="16dp"
                android:text="17pedidos" />

            <TextView
                android:id="@+id/txt_date_routes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/colorIcons"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/shape_date"
                android:padding="5dp"
                android:text="Lunes 07 de Noviembre" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/ic_hour_start"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_hour_start_24dp"
                    android:layout_marginRight="5dp"
                    android:tint="@color/colorSecondaryText"/>

                <TextView
                    android:id="@+id/lbl_hour_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_toRightOf="@+id/ic_hour_start"
                    android:text="Hora Inicio" />

                <TextView
                    android:id="@+id/txt_start_hour_routes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ic_hour_start"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:text="6:00 AM" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/ic_hour_end"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_hour_start_24dp"
                    android:layout_marginRight="5dp"
                    android:tint="@color/colorSecondaryText"/>

                <TextView
                    android:id="@+id/lbl_hour_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_toRightOf="@+id/ic_hour_end"
                    android:layout_toEndOf="@+id/ic_hour_end"
                    android:text="Hora Fin" />

                <TextView
                    android:id="@+id/txt_end_hour_routes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ic_hour_end"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:text="6:00 AM" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>