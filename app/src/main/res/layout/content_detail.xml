<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.acktos.regalosquehablan.transporter.presentation.DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/detail_cont_order_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingLeft="16dp">

            <ImageView
                android:id="@+id/detail_ic_order_id"
                android:layout_width="32dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:tint="@color/colorPrimaryText"
                android:src="@drawable/ic_reference"
                android:layout_margin="16dp"
                android:layout_height="32dp" />

            <TextView
                android:id="@+id/detail_lbl_order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryText"
                android:layout_toRightOf="@+id/detail_ic_order_id"
                android:layout_toEndOf="@+id/detail_ic_order_id"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="4dp"
                android:textStyle="bold"
                android:text="Referencia del pedido"/>

            <TextView
                android:id="@+id/detail_txt_order_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorSecondaryText"
                android:layout_toRightOf="@+id/detail_ic_order_id"
                android:layout_toEndOf="@+id/detail_ic_order_id"
                android:layout_below="@+id/detail_lbl_order_id"
                android:text="R1515"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorDivider"
                android:layout_below="@+id/detail_txt_order_id"
                android:layout_toRightOf="@+id/detail_ic_order_id"
                android:layout_toEndOf="@+id/detail_ic_order_id"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/detail_cont_delivery_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingLeft="16dp">

            <ImageView
                android:id="@+id/detail_ic_delivery_date"
                android:layout_width="32dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:tint="@color/colorPrimaryText"
                android:src="@drawable/ic_date"
                android:layout_margin="16dp"
                android:layout_height="32dp" />

            <TextView
                android:id="@+id/detail_lbl_delivery_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryText"
                android:layout_toRightOf="@+id/detail_ic_delivery_date"
                android:layout_toEndOf="@+id/detail_ic_delivery_date"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="4dp"
                android:textStyle="bold"
                android:text="Fecha de Entrega"/>

            <TextView
                android:id="@+id/detail_txt_delivery_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorSecondaryText"
                android:layout_toRightOf="@+id/detail_ic_delivery_date"
                android:layout_toEndOf="@+id/detail_ic_delivery_date"
                android:layout_below="@+id/detail_lbl_delivery_date"
                android:text="30 octubre 2015"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorDivider"
                android:layout_below="@+id/detail_txt_delivery_date"
                android:layout_toRightOf="@+id/detail_ic_delivery_date"
                android:layout_toEndOf="@+id/detail_ic_delivery_date"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/detail_cont_delivery_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingLeft="16dp">

            <ImageView
                android:id="@+id/detail_ic_delivery_address"
                android:layout_width="32dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:tint="@color/colorPrimaryText"
                android:src="@drawable/ic_place_24dp"
                android:layout_margin="16dp"
                android:layout_height="32dp" />

            <TextView
                android:id="@+id/detail_lbl_delivery_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryText"
                android:layout_toRightOf="@+id/detail_ic_delivery_address"
                android:layout_toEndOf="@+id/detail_ic_delivery_address"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="4dp"
                android:textStyle="bold"
                android:text="Dirección de entrega"/>

            <TextView
                android:id="@+id/detail_txt_delivery_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorSecondaryText"
                android:layout_toRightOf="@+id/detail_ic_delivery_address"
                android:layout_toEndOf="@+id/detail_ic_delivery_address"
                android:layout_below="@+id/detail_lbl_delivery_address"
                android:text="Cra 79 # 10 d 95"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorDivider"
                android:layout_below="@+id/detail_txt_delivery_address"
                android:layout_toRightOf="@+id/detail_ic_delivery_address"
                android:layout_toEndOf="@+id/detail_ic_delivery_address"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/detail_cont_customer_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingLeft="16dp">

            <ImageView
                android:id="@+id/detail_ic_customer_phone"
                android:layout_width="32dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:tint="@color/colorPrimaryText"
                android:src="@drawable/ic_call_24dp"
                android:layout_margin="16dp"
                android:layout_height="32dp" />

            <TextView
                android:id="@+id/detail_lbl_customer_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryText"
                android:layout_toRightOf="@+id/detail_ic_customer_phone"
                android:layout_toEndOf="@+id/detail_ic_customer_phone"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="4dp"
                android:textStyle="bold"
                android:text="Teléfono del cliente"/>

            <TextView
                android:id="@+id/detail_txt_customer_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorSecondaryText"
                android:layout_toRightOf="@+id/detail_ic_customer_phone"
                android:layout_toEndOf="@+id/detail_ic_customer_phone"
                android:layout_below="@+id/detail_lbl_customer_phone"
                android:text="3102346547"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorDivider"
                android:layout_below="@+id/detail_txt_customer_phone"
                android:layout_toRightOf="@+id/detail_ic_customer_phone"
                android:layout_toEndOf="@+id/detail_ic_customer_phone"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/detail_cont_delivery_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingLeft="16dp">

            <ImageView
                android:id="@+id/detail_ic_delivery_state"
                android:layout_width="32dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:tint="@color/colorPrimaryText"
                android:src="@drawable/ic_delivery_state_24dp"
                android:layout_margin="16dp"
                android:layout_height="32dp" />

            <TextView
                android:id="@+id/detail_lbl_delivery_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryText"
                android:layout_toRightOf="@+id/detail_ic_delivery_state"
                android:layout_toEndOf="@+id/detail_ic_delivery_state"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="4dp"
                android:textStyle="bold"
                android:text="Estado de entrega"/>

            <TextView
                android:id="@+id/detail_txt_delivery_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorSecondaryText"
                android:layout_toRightOf="@+id/detail_ic_delivery_state"
                android:layout_toEndOf="@+id/detail_ic_delivery_state"
                android:layout_below="@+id/detail_lbl_delivery_state"
                android:text="Entrega exitosa"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorDivider"
                android:layout_below="@+id/detail_txt_delivery_state"
                android:layout_toRightOf="@+id/detail_ic_delivery_state"
                android:layout_toEndOf="@+id/detail_ic_delivery_state"/>

        </RelativeLayout>

    </LinearLayout>


    <!--<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin" android:text="@string/large_text" />-->

</android.support.v4.widget.NestedScrollView>
