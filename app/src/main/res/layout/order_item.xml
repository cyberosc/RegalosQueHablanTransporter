<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_order"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/thumb_order_card"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/desayuno" />

        <TextView
            android:id="@+id/txt_order_id_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="R1525"
            android:layout_toRightOf="@+id/thumb_order_card"
            android:layout_toEndOf="@+id/thumb_order_card"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/txt_state_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aprobado"
            android:padding="4dp"
            android:textColor="@color/colorIcons"
            android:background="@drawable/shape_date"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp"/>

        <TextView
            android:id="@+id/txt_order_hour_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_order_id_card"
            android:layout_toRightOf="@+id/thumb_order_card"
            android:layout_marginLeft="10dp"
            android:text="Martes, 11:00 AM" />



        <Button
            android:id="@+id/btn_delivery_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:paddingTop="5dp"
            android:layout_margin="16dp"
            android:textStyle="bold"
            android:text="ENTREGAR"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <Button
            android:id="@+id/btn_info_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:paddingTop="5dp"
            android:textStyle="bold"
            android:text="INFO"
            android:layout_toLeftOf="@+id/btn_delivery_card"
            android:layout_toStartOf="@+id/btn_delivery_card"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>



</android.support.v7.widget.CardView>